  //Cabecera de las tables
  const thead = async () => {
    //Sección de trimtres
    const trimestre = await axios.get("/table/getTrimestre");
    let trimestres = trimestre.data
    //Ordenamos con el método sort, para que siempre sea de menor a mayor
    trimestres.sort(function (a, b) {
      return a - b
    })
    //Sección de trimtres
    //Primera columna [] -> Array
    let head = ['Cuenta']
    //Clonamos el array para agregarle string necesaria
    let clonT = [...trimestres]
    let interClonT = clonT.map(function (a) {
      return `%${a}`
    })
    // Concatenamos para que generen las columans de datos númericos
    let columntableT = head.concat(trimestres, interClonT)
    //Lista para inyectar en el HTML
    let thead = columntableT.map(function (j) {
      return `<th>${j}</th>`
    })
    let theadresult = thead.join(' ')

    document.getElementById("thead1").innerHTML = theadresult
    document.getElementById("thead2").innerHTML = theadresult
    document.getElementById("thead3").innerHTML = theadresult
    document.getElementById("thead4").innerHTML = theadresult
    document.getElementById("thead5").innerHTML = theadresult
